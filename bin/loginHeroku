#!/bin/bash

echo "Inserting authentication to netrc"
echo "machine api.heroku.com" >> ~/.netrc
echo "   login ${HEROKU_API_LOGIN}" >> ~/.netrc
echo "   password ${HEROKU_API_KEY}" >> ~/.netrc

echo "machine git.heroku.com" >> ~/.netrc
echo "   login ${HEROKU_API_LOGIN}" >> ~/.netrc
echo "   password ${HEROKU_API_KEY}" >> ~/.netrc

echo "Netrc looks like: "
cat ~/.netrc
